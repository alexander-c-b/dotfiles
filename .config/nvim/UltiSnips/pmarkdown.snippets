snippet cited "Works cited" b
\`\\pagebreak\`{=context}

# Works Cited
::: {#refs .hang-indent}
:::
endsnippet

snippet mlacited "Works cited" b
\`\`\`{=context}
\\pagebreak
\\startalign[center] Works Cited \\stopalign
\\setupindenting[-0.5in,yes,first]
\`\`\`

::: {#refs}
:::
endsnippet

snippet :((\d+)h|h(\d+)): "Header (## ...)" r
`!p
m = match[2] or match[3]
snip.rv = '#' * int(m)` $0
endsnippet

snippet :(\d+)(st|nd|rd|th): "Ordinal number superscript" r
`!p snip.rv = f"{match[1]}^{match[2]}^"`
endsnippet

snippet < "HTML-style single-line comment" w
<!-- ${1:${VISUAL}} -->$0
endsnippet

snippet <! "HMTL-style multi-line comment" w
<!--
${1:${VISUAL}}
-->$0
endsnippet

snippet cols "Columns" b
\`\\startcolumns[n=${1:2}]\`{=context}

${2:${VISUAL}}

\`\\stopcolumns\`{=context}$0
endsnippet

