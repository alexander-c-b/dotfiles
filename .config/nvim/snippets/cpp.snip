snippet hguard
alias   header_guard header-guard guard
    #ifndef ${1}
    #define $1

    ${2}
    
    #endif  // #ifndef $1


snippet testcase
alias TEST_CASE test test_case
options word
    TEST_CASE("${1}", "[${2}]") {
        ${3}
    }


snippet section
alias SECTION
options word
    SECTION("${1}") {
        ${2}
    }


snippet require
alias   REQUIRE req
options word
    REQUIRE(${1});
    ${2}
